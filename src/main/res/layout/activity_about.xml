<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#034694"
            app:title="About" />

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Logo -->
                <ImageView
                    android:id="@+id/about_logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/logoapp2"
                    android:layout_marginBottom="16dp"/>

                <!-- App Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="CalcDiv"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <!-- Version -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Version 1.0"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#666666"/>

                <!-- Developer Info Box -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/about_box_bg"
                    android:padding="16dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Developer Information"
                        android:textColor="#020101 "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name: "
                            android:textColor="#020101"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/developer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Raimi Akasyah Bin Abdul Halim"
                            android:textColor="#020101" />
                    </LinearLayout>

                    <!-- Student ID -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student ID: "
                            android:textColor="#020101"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/student_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2023105261"
                            android:textColor="#020101" />
                    </LinearLayout>

                    <!-- Class Group -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Class: "
                            android:textColor="#020101"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/class_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RCDCS2405A"
                            android:textColor="#020101" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Additional Link -->
                <TextView
                    android:id="@+id/additional_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[Your Link Text]"
                    android:textColor="#1E88E5"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="16sp"/>

                <!-- Copyright -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â© 2023 CalcDiv. All rights reserved."
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>